<!DOCTYPE html>
<html>

<head>
  <%- include('header') -%>
</head>

<body style="height: 100vh;">
  <%- include('nav') -%>
  <div class="wrapper mt-n5">
    <%- include('administratorOptions') -%>
    <div class=" d-flex justify-content-center" style=" width: 100%; height: auto;">
      <div class="manageBg bg-white mx-5 my-4">
        <button type="button" class="btn btn-light" id="add"> + 新增專題團隊</button>
        <div class="selectBtn d-flex justify-content-end">
          <button type="button" class="btn btn-light btn-sm" id="select"> 全選</button>
          <script>
            $("button#select").click(function () {
              let allchecked = true
              $(`input[type="checkbox"]`).each(function () {
                if (!$(this).prop(`checked`)) allchecked = false
              })
              $(`input[type="checkbox"]`).prop(`checked`, !allchecked)
            })
          </script>
          <button type="button" class="btn btn-light btn-sm" id="delete">
            <img src="/static/images/trash.png" style="width: 25px;" alt=""></button>
        </div>
        <div class="project-list">
          <form role="form">
            <div class="checkbox">
              <label class="projects-item"><input type="checkbox"
                  style="width:15px;height:15px;margin:5px;">Disco0</label>
            </div>
            <div class="checkbox">
              <label class="projects-item"><input type="checkbox"
                  style="width:15px;height:15px;margin:5px;">Disco1</label>
            </div>
            <div class="checkbox">
              <label class="projects-item"><input type="checkbox"
                  style="width:15px;height:15px;margin:5px;">Disco2</label>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <%- include('footer'); -%>
</body>